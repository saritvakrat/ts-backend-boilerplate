{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "Sarit Vakrat",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && nest build",
    "start": "nest start",
    "start:dev": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "package:update": "npx npm-check-updates -u",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit": "jest test/unit/**/*.test.ts",
    "test:spec": "jest test/integration/**/*.spec.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && npm run test",
      "pre-push": "npm audit fix && npm run build"
    }
  },
  "lint-staged": {
    "*.{ts}": "eslint --fix"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/platform-express": "^6.10.14",
    "moment": "^2.24.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/express": "^4.17.2",
    "@types/jest": "25.1.2",
    "@types/supertest": "^2.0.8",
    "@types/node": "^13.9.2",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "husky": "^4.2.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
